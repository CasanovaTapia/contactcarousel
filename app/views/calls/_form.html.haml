= form_for @call do |f|
  - if @call.errors.any?
    #error_explanation
      %h2= "#{pluralize(@call.errors.count, "error")} prohibited this call from being saved:"
      %ul
        - @call.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :dial
    = f.text_field :dial
  .field
    = f.label :conversation
    = f.text_field :conversation
  .field
    = f.label :invest
    = f.text_field :invest
  .field
    = f.label :timing
    = f.text_field :timing
  .field
    = f.label :motivator
    = f.text_field :motivator
  .actions
    = f.submit 'Save'
