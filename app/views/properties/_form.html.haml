= form_for [@contact, @property] do |f|
  .row
    .col-md-6.col-md-offset-3
      - if @property.errors.any?
        #error_explanation
          %h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
          %ul
            - @property.errors.full_messages.each do |msg|
              %li= msg
      .form-group
        = f.label :street_no
        = f.number_field :street_no, class: 'form-control'
      .form-group
        = f.label :street
        = f.text_field :street, class: 'form-control'
      .form-group
        = f.label :city
        = f.text_field :city, class: 'form-control'
      .form-group
        = f.label :state
        = f.text_field :state, class: 'form-control'
      .form-group
        = f.label :zip
        = f.number_field :zip, class: 'form-control'
      .form-group
        = f.label :year_built
        = f.number_field :year_built, class: 'form-control'
      .form-group
        = f.label :units
        = f.number_field :units, class: 'form-control'
      .form-group
        = f.label :purchase_year
        = f.number_field :purchase_year, class: 'form-control'
      .actions
        = f.submit 'Save', class: 'btn btn-success'
